# =============================================================================
# .env.production - Variables de entorno para App-Turnos (Producción)
# =============================================================================
#
# Este archivo contiene las variables de entorno para el backend en producción.
# IMPORTANTE: Los valores marcados con GENERATED_* serán reemplazados
# automáticamente durante la instalación.
#
# Ubicación: /apps-node/app-turnos/backend/.env
# =============================================================================

# =============================================================================
# Entorno
# =============================================================================

NODE_ENV=production
PORT=3000

# =============================================================================
# Base de Datos PostgreSQL
# =============================================================================

DB_HOST=localhost
DB_PORT=5432
DB_NAME=app_turnos
DB_USER=app_turnos_user
DB_PASSWORD=GENERATED_DB_PASSWORD
DB_SSL=false

# =============================================================================
# JWT - Autenticación
# =============================================================================

JWT_SECRET=GENERATED_JWT_SECRET
JWT_EXPIRES_IN=24h

# =============================================================================
# MQTT - Mosquitto
# =============================================================================

MQTT_HOST=localhost
MQTT_PORT=1883
MQTT_WS_PORT=9001

# =============================================================================
# Hospital - Configuración
# =============================================================================

HOSPITAL_ID=hospital-1
HOSPITAL_NAME=Hospital General

# =============================================================================
# CORS
# =============================================================================

CORS_ORIGIN=*

# =============================================================================
# Uploads
# =============================================================================

UPLOAD_PATH=./public/uploads
MAX_FILE_SIZE=10485760

# =============================================================================
# Logging
# =============================================================================

LOG_LEVEL=info
LOG_FILE=./logs/app.log

# =============================================================================
# API
# =============================================================================

API_PREFIX=/api
API_VERSION=v1

# =============================================================================
# Rate Limiting (opcional)
# =============================================================================

RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
